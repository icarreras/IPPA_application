<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="TabAppTheme">
      	  <item name="android:gravity">center_horizontal</item>
	      <item name="android:paddingLeft">16dip</item>
	      <item name="android:paddingRight">16dip</item>
	      <item name="android:background">@drawable/apptheme_tab_indicator_holo</item>
	      <item name="android:layout_width">0dip</item>
	      <item name="android:layout_weight">1</item>
	      <item name="android:minWidth">80dip</item>
	  </style>
	
	  <style name="TabTextAppTheme">
		  <item name="android:textColor">#000000</item>
	      <item name="android:textSize">12sp</item>
	      <item name="android:textStyle">bold</item>
	      <!-- v14 <item name="android:textAllCaps">true</item> -->
	      <item name="android:ellipsize">marquee</item>
	      <item name="android:maxLines">2</item>
	      <item name="android:maxWidth">180dip</item>
	  </style>
	  
	  <style name="IppaSeekBarAppTheme" parent="android:Widget.Holo.Light.SeekBar">
      <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="IppaActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/IppaActionBarTitleText</item>
        <item name="android:background">@color/IppaGreen</item>
    </style>

    <!-- ActionBar title text -->
    <style name="IppaActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="IppaActionBarTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/White</item>
    </style>
    
	<style name="ButtonAppTheme_Green" parent="android:Widget.Holo.Light.Button">
	  	<item name="android:background">@drawable/apptheme_green_btn_default_holo_light</item>
	</style>
	
	<style name="ImageButtonAppTheme_Green" parent="android:Widget.Holo.Light.ImageButton">
	 	<item name="android:background">@drawable/apptheme_green_btn_default_holo_light</item>
	</style>
	
	<style name="ButtonAppTheme_Pink" parent="android:Widget.Holo.Light.Button">
	  <item name="android:background">@drawable/apptheme_pink_btn_default_holo_light</item>
  	</style>
 
  	<style name="ProgressBarAppTheme_Pink" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apptheme_pink_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_pink_progress_indeterminate_horizontal_holo_light</item>
  	</style>
  	
  	<style name="ButtonAppTheme_Yellow" parent="android:Widget.Holo.Light.Button">
	    <item name="android:background">@drawable/apptheme_yellow_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonAppTheme_Yellow" parent="android:Widget.Holo.Light.ImageButton">
	    <item name="android:background">@drawable/apptheme_yellow_btn_default_holo_light</item>
    </style>
	

</resources>
