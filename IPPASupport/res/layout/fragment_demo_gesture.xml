<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/demo_fragment"
    android:orientation="vertical">
	<TextView
	    android:id="@+id/tittle_in_mobile"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/IppaLightYellow"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingTop="5dp"
	    android:text="@string/title_demo_inmobile"
	    android:textColor="@color/IppaDarkYellow"
	    android:textSize="18sp"
	    android:textStyle="bold"/>
	
	<ListView
	    android:id="@+id/mobile_gestures"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_weight="1"
	    android:divider="@color/IppaDarkYellow"
	    android:dividerHeight="5dp"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="24sp"
	    android:listSelector="@drawable/apptheme_green_list_selector_holo_light"
	    />
	
	<TextView
	    android:id="@+id/title_in_arm"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/IppaLightYellow"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingTop="5dp"
	    android:text="@string/title_demo_inarm"
	    android:textColor="@color/IppaDarkYellow"
	    android:textSize="18sp"
	    android:textStyle="bold"
	    />
	
	<ListView
	    android:id="@+id/arm_gestures"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:divider="@color/IppaDarkYellow"
	    android:dividerHeight="5dp"
	    android:listSelector="@drawable/apptheme_green_list_selector_holo_light"
	    />
 </LinearLayout>