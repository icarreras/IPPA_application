<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ippa"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <activity
            android:name=".ippasupport.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ippasupport.ConnectionInstructionsActivity"
            android:label="@string/title_activity_connection_instructions" >
        </activity>
        <activity
            android:name=".ippasupport.VoiceCommandActivity"
            android:label="@string/title_activity_voice_command" >
        </activity>
        <activity
            android:name=".ippasupport.TeachingModeMainActivity"
            android:label="@string/title_activity_teaching_mode" >
        </activity>
        <activity 
            android:name=".ippasupport.DeviceDiscoveryActivity"
            android:label="Pick device">
        </activity>
        
    </application>

</manifest>